{
  "name": "remote-mcp-server-with-ui-template",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@9.15.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm --filter mcp-server dev",
    "dev:ui": "pnpm --filter ui dev",
    "dev:all": "concurrently \"pnpm --filter mcp-server dev\" \"pnpm --filter ui dev\"",
    "build": "pnpm --filter mcp-server build && pnpm --filter ui build",
    "build:ui": "pnpm --filter ui build",
    "build:server": "pnpm --filter mcp-server build",
    "vercel-build": "pnpm install && pnpm db:generate && pnpm build",
    "type-check": "pnpm --filter mcp-server type-check && pnpm --filter ui type-check",
    "docker:pg": "docker run --name mcp-server-pg -e POSTGRES_PASSWORD=your_password -e POSTGRES_USER=your_username -e POSTGRES_DB=mcp_server -p 5432:5432 -d postgres",
    "docker:up": "docker-compose -f docker/compose.yml up -d",
    "docker:down": "docker-compose -f docker/compose.yml down",
    "db:generate": "pnpm --filter mcp-server db:generate",
    "db:migrate:dev": "pnpm --filter mcp-server db:migrate:dev",
    "db:migrate:deploy": "pnpm --filter mcp-server db:migrate:deploy",
    "db:migrate:reset": "pnpm --filter mcp-server db:migrate:reset",
    "db:push": "pnpm --filter mcp-server db:push",
    "db:studio": "pnpm --filter mcp-server db:studio"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "prettier": "^3.6.2"
  }
}
